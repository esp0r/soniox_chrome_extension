{
  "manifest_version": 3,
  "name": "Soniox Live Subtitles",
  "version": "1.0.0",
  "description": "Real-time bilingual subtitles using Soniox Speech-to-Text API",
  "permissions": [
    "activeTab",
    "tabCapture",
    "offscreen",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Soniox Live Subtitles"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
